<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo" android:orientation="vertical" android:padding="30dp">
    
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="0" >
	        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" 
	            android:text="Selecione sua cidade:" android:textColor="@android:color/black" android:textStyle="bold" android:textSize="20sp"/>
	</LinearLayout>
    
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="3" android:paddingTop="10dp" >
	    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="2" >
	    </LinearLayout>
        	    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="2" >
	        <ImageView android:id="@+id/ivBoaVista"   android:layout_width="wrap_content"   android:layout_height="wrap_content"  android:src="@drawable/boavistaxml"/>
	    </LinearLayout>
	</LinearLayout>
    
    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="2">
        <ImageView android:id="@+id/ivManaus"  android:layout_width="wrap_content"   android:layout_height="wrap_content"  android:src="@drawable/manausxml" />
    </LinearLayout>
    
    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="3" android:paddingBottom="30dp">
	    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="2">
	        <ImageView android:id="@+id/ivRioBranco"   android:layout_width="wrap_content"   android:layout_height="wrap_content"  android:src="@drawable/riobrancoxml" />
	    </LinearLayout>
	    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="2">
	        <ImageView android:id="@+id/ivPortoVelho" android:layout_width="wrap_content"   android:layout_height="wrap_content"  android:src="@drawable/portovelhoxml" />
	    </LinearLayout>
	    </LinearLayout>    
    
</LinearLayout>
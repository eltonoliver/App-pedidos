		    <ImageView android:id="@+id/btRevendaVoltar" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/voltarxml" android:layout_gravity="center" android:padding="5dp"/>
		    <ImageView android:id="@+id/btRevendaProximo" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/proximoxml" android:layout_gravity="center" android:padding="5dp"/>
<!-- 		    <ImageView android:id="@+id/btRevendaTodos" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/voltarxml" android:layout_gravity="center" android:padding="5dp"/> -->
		</LinearLayout>		
	    
	
		    
</LinearLayout>